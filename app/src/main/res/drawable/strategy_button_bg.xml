<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state (Accent color outline + subtle fill) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#3300C8FF" /> <!-- colorAccent with 20% alpha -->
            <stroke android:width="1dp" android:color="?attr/colorAccent" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Default state (Normal outline) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#44FFFFFF" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
