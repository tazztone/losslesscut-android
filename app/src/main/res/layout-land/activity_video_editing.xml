<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="horizontal"
    tools:context=".VideoEditingActivity">

    <!-- Left Sidebar: Top Row Items -->
    <LinearLayout
        android:id="@+id/leftSidebar"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_save_color_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/export"
                android:tooltipText="@string/export"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp">
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_settings_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/settings"
                android:tooltipText="@string/settings"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp">
            <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_undo_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/undo"
                android:tooltipText="@string/undo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undo"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">
            <ImageButton
                android:id="@+id/btnAddClips"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_add_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add_video"
                android:tooltipText="@string/add_video"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_home_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/home"
                android:tooltipText="@string/home"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Center Content: Vertical Stack -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Player Area with Nudge Overlay -->
        <LinearLayout
            android:id="@+id/playerContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.media3.ui.PlayerView
                    android:id="@+id/playerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:use_controller="false" />

                <LinearLayout
                    android:id="@+id/audioPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_audio_24"
                        app:tint="@android:color/white"/>
                    <TextView
                        android:id="@+id/tvAudioFileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        tools:text="audio_file.m4a"/>
                </LinearLayout>

                <!-- Combined Nudge Controls Overlay -->
                <LinearLayout
                    android:id="@+id/nudgeControlsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#99000000"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00:00:00.000 / 00:00:00.000"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="16dp"/>

                    <ImageButton
                        android:id="@+id/btnNudgeBack"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_skip_previous_24"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/nudge_backward"
                        android:tooltipText="@string/nudge_backward"
                        app:tint="@android:color/white"/>

                    <ImageButton
                        android:id="@+id/btnPlayPauseControls"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_play_24"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/play_pause"
                        android:tooltipText="@string/play_pause"
                        app:tint="@android:color/white"/>

                    <ImageButton
                        android:id="@+id/btnNudgeForward"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_skip_next_24"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/nudge_forward"
                        android:tooltipText="@string/nudge_forward"
                        app:tint="@android:color/white"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnPlayPause"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_24"
                    android:background="@drawable/play_button_bg"
                    android:padding="16dp"
                    android:contentDescription="@string/play_pause"
                    android:tooltipText="@string/play_pause" />
            </FrameLayout>

            <!-- Playlist Area (Visible when multiple clips) -->
            <LinearLayout
                android:id="@+id/playlistContainer"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="?attr/colorSurface"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvClips"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_media_clip"/>

                <ImageButton
                    android:id="@+id/btnAddClipsPlaylist"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="12dp"
                    android:src="@drawable/ic_add_24"
                    android:background="@drawable/play_button_bg"
                    android:backgroundTint="?attr/colorPrimary"
                    android:padding="12dp"
                    android:contentDescription="@string/add_video"
                    android:tooltipText="@string/add_video"
                    app:tint="?attr/colorOnPrimary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Timeline Area -->
        <LinearLayout
            android:id="@+id/seekerContainer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="?attr/colorSurface"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <com.tazztone.losslesscut.customviews.CustomVideoSeeker
                android:id="@+id/customVideoSeeker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Right Sidebar: Bottom Row Items -->
    <LinearLayout
        android:id="@+id/rightSidebar"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/containerRotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <FrameLayout
                android:id="@+id/btnRotateContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">
                <ImageButton
                    android:id="@+id/btnRotate"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_rotate_24"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/rotate"
                    android:tooltipText="@string/rotate"
                    android:clickable="false"
                    android:focusable="false"
                    app:tint="?attr/colorOnSurface"/>
                <TextView
                    android:id="@+id/tvRotateEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ðŸ‘¤"
                    android:textSize="24sp"
                    android:visibility="gone"
                    android:clickable="false"
                    android:focusable="false"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSnapshot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp">
            <ImageButton
                android:id="@+id/btnSnapshot"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_camera_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/snapshot"
                android:tooltipText="@string/snapshot"
                app:tint="?attr/colorOnSurface"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snap"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp">
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/discard_segment"
                android:tooltipText="@string/discard_segment"
                app:tint="?attr/colorOnSurface"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discard"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/containerSplit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnSplit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_split_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/split"
                android:tooltipText="@string/split"
                app:tint="?attr/colorOnSurface"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Split"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSetOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="16dp">
            <ImageButton
                android:id="@+id/btnSetOut"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trim_right_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/set_out_point"
                android:tooltipText="@string/set_out_point"
                app:tint="?attr/colorOnSurface"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Out"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSetIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp">
            <ImageButton
                android:id="@+id/btnSetIn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trim_left_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/set_in_point"
                android:tooltipText="@string/set_in_point"
                app:tint="?attr/colorOnSurface"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/loading_screen"
        android:id="@+id/loadingScreen"
        android:visibility="gone"/>

</LinearLayout>
