<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editingControls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/containerRotate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <FrameLayout
            android:id="@+id/btnRotateContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnRotate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_rotate_24"
                android:background="@android:color/transparent"
                android:contentDescription="@string/rotate"
                android:tooltipText="@string/rotate"
                app:tint="?attr/colorOnSurface"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:id="@+id/tvRotateEmoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ‘¤"
                android:textSize="24sp"
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:id="@+id/badgeRotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:background="?attr/colorSecondaryContainer"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:textSize="10sp"
                android:padding="2dp"
                android:visibility="gone"
                android:text="90Â°"/>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rotate"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerSmartCut"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageButton
            android:id="@+id/btnSmartCut"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_smart_cut_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/smart_cut"
            android:tooltipText="@string/smart_cut"
            app:tint="?attr/colorOnSurface"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smart_cut"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerDelete"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/discard_segment"
            android:tooltipText="@string/discard_segment"
            app:tint="?attr/colorOnSurface"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit_confirm_discard"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerSplit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageButton
            android:id="@+id/btnSplit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_split_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/split"
            android:tooltipText="@string/split"
            app:tint="?attr/colorOnSurface"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/split"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerSetOut"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageButton
            android:id="@+id/btnSetOut"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_trim_right_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/set_out_point"
            android:tooltipText="@string/set_out_point"
            app:tint="?attr/colorOnSurface"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/short_out"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerSetIn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageButton
            android:id="@+id/btnSetIn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_trim_left_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/set_in_point"
            android:tooltipText="@string/set_in_point"
            app:tint="?attr/colorOnSurface"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/short_in"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>
</LinearLayout>
