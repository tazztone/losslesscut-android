<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:orientation="horizontal"
    tools:context=".VideoEditingActivity">

    <!-- Left Sidebar: Navigation -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <include 
            android:id="@+id/navBar"
            layout="@layout/editor_bar_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- Center Content -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <!-- Player area + Seeker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/playerContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <include 
                    android:id="@+id/playerSection"
                    layout="@layout/editor_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <include 
                    android:id="@+id/playlistArea"
                    layout="@layout/editor_playlist" />
            </LinearLayout>

            <include
                android:id="@+id/seekerContainer"
                layout="@layout/editor_timeline"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>

        <!-- Overlays -->
        <include
            android:id="@+id/smartCutOverlay"
            layout="@layout/dialog_smart_cut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

    <!-- Right Sidebar: Editing Tools -->
    <LinearLayout
        android:id="@+id/bottomActionContainer"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <include 
            android:id="@+id/editingControls"
            layout="@layout/editor_bar_editing"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <include
        layout="@layout/loading_screen"
        android:id="@+id/loadingScreen"
        android:visibility="gone"/>

</LinearLayout>

