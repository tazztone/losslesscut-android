    <style name="Editor" parent="AppTheme">
        <item name="colorBackground">@android:color/black</item>
    </style>

    <style name="DialogShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppTheme.Purple">
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorAccent">#BB86FC</item>
    </style>

    <style name="AppTheme.Green">
        <item name="colorPrimary">#03DAC5</item>
        <item name="colorAccent">#03DAC5</item>
    </style>

    <style name="AppTheme.Yellow">
        <item name="colorPrimary">#FFEB3B</item>
        <item name="colorAccent">#FFEB3B</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">#FF5252</item>
        <item name="colorAccent">#FF5252</item>
    </style>

    <style name="AppTheme.Orange">
        <item name="colorPrimary">#FF9800</item>
