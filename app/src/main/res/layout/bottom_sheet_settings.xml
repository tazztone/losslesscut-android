<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:padding="24dp">

    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_handle"
        android:backgroundTint="?attr/colorOnSurfaceVariant"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="?attr/colorOnSurface"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchLossless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lossless_mode_snap"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lossless_mode_desc"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchSnapshotJpeg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Snapshots as JPEG"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/layoutJpgQuality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="JPG Quality"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvJpgQualityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"/>
        </LinearLayout>
        
        <SeekBar
            android:id="@+id/seekBarJpgQuality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="95"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Undo Limit"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvUndoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"/>
        </LinearLayout>
        
        <SeekBar
            android:id="@+id/seekBarUndoLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="30"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/export_folder"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvExportPath"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Default (Movies/LosslessCut)"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:ellipsize="middle"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btnChangePath"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"/>
            
            <ImageButton
                android:id="@+id/btnResetPath"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_restore_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorError"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
