<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".VideoEditingActivity">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:padding="8dp"
        android:layout_alignParentTop="true">

        <ImageButton
        
            android:tooltipText="@string/home"
            android:id="@+id/btnHome"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/home"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
        
                android:tooltipText="@string/undo"
            android:id="@+id/btnUndo"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_undo_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/undo"
                android:layout_marginEnd="16dp"/>

            <ImageButton
        
                android:tooltipText="@string/settings"
            android:id="@+id/btnSettings"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/settings"
                android:layout_marginEnd="16dp"/>

            <ImageButton
        
                android:tooltipText="@string/export"
            android:id="@+id/btnSave"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_save_color_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/export"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Bottom Editing Tools -->
    <LinearLayout
        android:id="@+id/editingControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="12dp">

        <ImageButton
        
            android:tooltipText="@string/set_in_point"
            android:id="@+id/btnSetIn"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_trim_left_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/set_in_point"/>

        <ImageButton
        
            android:tooltipText="@string/set_out_point"
            android:id="@+id/btnSetOut"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_trim_right_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/set_out_point"/>

        <ImageButton
        
            android:tooltipText="@string/split"
            android:id="@+id/btnSplit"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_split_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/split"/>

        <ImageButton
        
            android:tooltipText="@string/discard_segment"
            android:id="@+id/btnDelete"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_delete_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/discard_segment"/>

        <ImageButton
        
            android:tooltipText="@string/snapshot"
            android:id="@+id/btnSnapshot"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_camera"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/snapshot"/>
            
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
        
                android:tooltipText="@string/rotate"
            android:id="@+id/btnRotate"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_rotate"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/rotate"/>
            
            <TextView
                android:id="@+id/badgeRotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:background="#DD000000"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:padding="2dp"
                android:visibility="gone"
                android:text="90Â°"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Timeline Area -->
    <LinearLayout
        android:id="@+id/seekerContainer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#CC000000"
        android:orientation="vertical"
        android:layout_above="@+id/editingControls"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <com.tazztone.losslesscut.customviews.CustomVideoSeeker
                android:id="@+id/customVideoSeeker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Timecode & Nudge Controls (Above Timeline) -->
    <LinearLayout
        android:id="@+id/nudgeControlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_above="@+id/seekerContainer"
        android:background="#80000000"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00:00.000 / 00:00:00.000"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp"/>

        <ImageButton
        
            android:tooltipText="@string/nudge_backward"
            android:id="@+id/btnNudgeBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/btnPlayPauseControls"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_24"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
        
            android:tooltipText="@string/nudge_forward"
            android:id="@+id/btnNudgeForward"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_next"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- Player Area (Takes remaining top space) -->
    <FrameLayout
        android:id="@+id/playerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/nudgeControlsContainer">

        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false" />

        <ImageButton
        
            android:tooltipText="@string/play_pause"
            android:id="@+id/btnPlayPause"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_24"
            android:background="#80000000"
            android:padding="16dp"
            android:contentDescription="@string/play_pause" />
    </FrameLayout>

    <include
        layout="@layout/loading_screen"
        android:id="@+id/loadingScreen"
        android:visibility="gone"/>

</RelativeLayout>
