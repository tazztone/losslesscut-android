<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".VideoEditingActivity">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:padding="8dp"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/btnHome"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/home"
            android:tooltipText="@string/home"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btnAddClips"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/add_video"
            android:tooltipText="@string/add_video"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnUndo"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_undo_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/undo"
                android:tooltipText="@string/undo"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:id="@+id/btnSettings"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/settings"
                android:tooltipText="@string/settings"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:id="@+id/btnSnapshot"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/snapshot"
                android:tooltipText="@string/snapshot"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Bottom Editing Tools -->
    <LinearLayout
        android:id="@+id/editingControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorSurface"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/containerSetIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnSetIn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trim_left_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/set_in_point"
                android:tooltipText="@string/set_in_point"
                app:tint="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSetOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnSetOut"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trim_right_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/set_out_point"
                android:tooltipText="@string/set_out_point"
                app:tint="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Out"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSplit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnSplit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_split_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/split"
                android:tooltipText="@string/split"
                app:tint="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Split"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/discard_segment"
                android:tooltipText="@string/discard_segment"
                app:tint="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discard"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSilenceCut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnSilenceCut"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_silence_cut_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/silence_cut"
                android:tooltipText="@string/auto_detect_silence"
                app:tint="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/silence_cut"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
            
        <LinearLayout
            android:id="@+id/containerRotate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <FrameLayout
                android:id="@+id/btnRotateContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">
                <ImageButton
                    android:id="@+id/btnRotate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_rotate_24"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/rotate"
                    android:tooltipText="@string/rotate"
                    app:tint="?attr/colorOnSurface"
                    android:clickable="false"
                    android:focusable="false"/>
                <TextView
                    android:id="@+id/tvRotateEmoji"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ðŸ‘¤"
                    android:textSize="24sp"
                    android:visibility="gone"
                    android:clickable="false"
                    android:focusable="false"/>
                <TextView
                    android:id="@+id/badgeRotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="#DD000000"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:text="90Â°"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Timeline Area -->
    <LinearLayout
        android:id="@+id/seekerContainer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="?attr/colorSurface"
        android:orientation="vertical"
        android:layout_above="@+id/editingControls"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <com.tazztone.losslesscut.customviews.CustomVideoSeeker
                android:id="@+id/customVideoSeeker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>


    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/bottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMetadata"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Metadata"
            android:textSize="10sp"
            app:icon="@drawable/ic_metadata_24"
            app:iconSize="18dp" />

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExport"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Cut"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_export_24"
            app:iconSize="24dp" />

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemux"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remux"
            android:textSize="10sp"
            app:icon="@drawable/ic_remux_24"
            app:iconSize="18dp" />

    </LinearLayout>

    <!-- Player Area (Takes remaining top space) -->
    <LinearLayout
        android:id="@+id/playerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/seekerContainer"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.media3.ui.PlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:use_controller="false" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:text="00:00 / 00:00"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:shadowColor="#BB000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <LinearLayout
                android:id="@+id/audioPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_audio_24"
                    app:tint="@android:color/white"/>
                <TextView
                    android:id="@+id/tvAudioFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    tools:text="audio_file.m4a"/>
            </LinearLayout>

            <!-- Timecode & Nudge Controls Overlay -->
            <LinearLayout
                android:id="@+id/nudgeControlsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:animateLayoutChanges="true">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnPlaybackSpeed"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="1.0x"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/btnNudgeBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_skip_previous_24"
                    android:background="@drawable/glow_button_bg"
                    android:contentDescription="@string/nudge_backward"
                    android:tooltipText="@string/nudge_backward"
                    app:tint="@android:color/white"/>

                <ImageButton
                    android:id="@+id/btnPlayPauseControls"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_play_24"
                    android:background="@drawable/glow_button_bg"
                    android:contentDescription="@string/play_pause"
                    android:tooltipText="@string/play_pause"
                    app:tint="@android:color/white"/>

                <ImageButton
                    android:id="@+id/btnNudgeForward"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_skip_next_24"
                    android:background="@drawable/glow_button_bg"
                    android:contentDescription="@string/nudge_forward"
                    android:tooltipText="@string/nudge_forward"
                    app:tint="@android:color/white"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_24"
                android:background="@drawable/play_button_bg"
                android:padding="16dp"
                android:contentDescription="@string/play_pause"
                android:tooltipText="@string/play_pause" />

            <include
                android:id="@+id/silenceDetectionContainer"
                layout="@layout/dialog_silence_detection"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Playlist Area (Visible when multiple clips) -->
        <LinearLayout
            android:id="@+id/playlistContainer"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvClips"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_media_clip"/>

        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/loading_screen"
        android:id="@+id/loadingScreen"
        android:visibility="gone"/>

</RelativeLayout>
