<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".VideoEditingActivity">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:padding="8dp"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/btnHome"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnUndo"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_undo_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:id="@+id/btnSettings"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:id="@+id/btnSave"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_save_color_24"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Bottom Editing Tools -->
    <LinearLayout
        android:id="@+id/editingControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorSurface"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/containerSetIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnSetIn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trim_left_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSetOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnSetOut"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trim_right_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Out"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSplit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnSplit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_split_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Split"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discard"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSnapshot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/btnSnapshot"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_camera_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snap"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
            
        <LinearLayout
            android:id="@+id/containerRotate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <FrameLayout
                android:id="@+id/btnRotateContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">
                <ImageButton
                    android:id="@+id/btnRotate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_rotate_24"
                    android:background="@android:color/transparent"
                    app:tint="?attr/colorOnSurface"
                    android:clickable="false"
                    android:focusable="false"/>
                <TextView
                    android:id="@+id/tvRotateEmoji"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ðŸ‘¤"
                    android:textSize="24sp"
                    android:visibility="gone"
                    android:clickable="false"
                    android:focusable="false"/>
                <TextView
                    android:id="@+id/badgeRotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="#DD000000"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:text="90Â°"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Timeline Area -->
    <LinearLayout
        android:id="@+id/seekerContainer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="?attr/colorSurface"
        android:orientation="vertical"
        android:layout_above="@+id/editingControls"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <com.tazztone.losslesscut.customviews.CustomVideoSeeker
                android:id="@+id/customVideoSeeker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Timecode & Nudge Controls (Above Timeline) -->
    <LinearLayout
        android:id="@+id/nudgeControlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_above="@+id/seekerContainer"
        android:background="?attr/colorSurface"
        android:padding="8dp"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00:00.000 / 00:00:00.000"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="16dp"/>

        <ImageButton
            android:id="@+id/btnNudgeBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_skip_previous_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="?attr/colorOnSurface"/>

        <ImageButton
            android:id="@+id/btnPlayPauseControls"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="?attr/colorOnSurface"/>

        <ImageButton
            android:id="@+id/btnNudgeForward"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_skip_next_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="?attr/colorOnSurface"/>
    </LinearLayout>

    <!-- Player Area (Takes remaining top space) -->
    <FrameLayout
        android:id="@+id/playerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/nudgeControlsContainer">

        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false" />

        <LinearLayout
            android:id="@+id/audioPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_audio_24"
                app:tint="@android:color/white"/>
            <TextView
                android:id="@+id/tvAudioFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:text="audio_file.m4a"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_24"
            android:background="@drawable/play_button_bg"
            android:padding="16dp" />
    </FrameLayout>

    <include
        layout="@layout/loading_screen"
        android:id="@+id/loadingScreen"
        android:visibility="gone"/>

</RelativeLayout>
