<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    tools:context=".VideoEditingActivity">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:padding="8dp"
        android:layout_alignParentTop="true">
        
        <include 
            android:id="@+id/navBar"
            layout="@layout/editor_bar_navigation" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Bottom Action Area (Container for editing tools and Smart Cut) -->
    <LinearLayout
        android:id="@+id/bottomActionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/seekerContainer">

        <include 
            android:id="@+id/editingControls"
            layout="@layout/editor_bar_editing" />

        <include
            android:id="@+id/smartCutOverlay"
            layout="@layout/dialog_smart_cut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <include
        android:id="@+id/seekerContainer"
        layout="@layout/editor_timeline"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true" />

    <!-- Player Area (Takes remaining space) -->
    <LinearLayout
        android:id="@+id/playerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottomActionContainer"
        android:orientation="horizontal">

        <include
            android:id="@+id/playerSection"
            layout="@layout/editor_player"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <include 
            android:id="@+id/playlistArea"
            layout="@layout/editor_playlist" />

    </LinearLayout>

    <include
        layout="@layout/loading_screen"
        android:id="@+id/loadingScreen"
        android:visibility="gone"/>

</RelativeLayout>

