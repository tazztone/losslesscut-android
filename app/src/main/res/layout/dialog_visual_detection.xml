<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- SECTION: ANALYSIS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANALYSIS"
            android:textSize="10sp"
            android:textColor="?attr/colorAccent"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strategy"
            android:textSize="11sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:id="@+id/layoutStrategySelector"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Scene Change -->
            <LinearLayout
                android:id="@+id/btnSceneChange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/strategy_button_bg"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scene"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:duplicateParentState="true"/>
                <ImageButton
                    android:id="@+id/infoScene"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_info_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#88FFFFFF"
                    android:tooltipText="@string/tooltip_strategy_scene"
                    android:tag="@string/tooltip_strategy_scene"
                    android:contentDescription="Scene Info"/>
            </LinearLayout>

            <View android:layout_width="4dp" android:layout_height="match_parent"/>

            <!-- Black Frames -->
            <LinearLayout
                android:id="@+id/btnBlackFrames"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/strategy_button_bg"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Black"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:duplicateParentState="true"/>
                <ImageButton
                    android:id="@+id/infoBlack"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_info_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#88FFFFFF"
                    android:tooltipText="@string/tooltip_strategy_black"
                    android:tag="@string/tooltip_strategy_black"
                    android:contentDescription="Black Info"/>
            </LinearLayout>

            <View android:layout_width="4dp" android:layout_height="match_parent"/>

            <!-- Freeze Frame -->
            <LinearLayout
                android:id="@+id/btnFreezeFrame"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/strategy_button_bg"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Freeze"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:duplicateParentState="true"/>
                <ImageButton
                    android:id="@+id/infoFreeze"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_info_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#88FFFFFF"
                    android:tooltipText="@string/tooltip_strategy_freeze"
                    android:tag="@string/tooltip_strategy_freeze"
                    android:contentDescription="Freeze Info"/>
            </LinearLayout>

            <View android:layout_width="4dp" android:layout_height="match_parent"/>

            <!-- Blur Quality -->
            <LinearLayout
                android:id="@+id/btnBlurQuality"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/strategy_button_bg"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blur"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:duplicateParentState="true"/>
                <ImageButton
                    android:id="@+id/infoBlur"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_info_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#88FFFFFF"
                    android:tooltipText="@string/tooltip_strategy_blur"
                    android:tag="@string/tooltip_strategy_blur"
                    android:contentDescription="Blur Info"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Sample Interval (Analysis stage) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interval"
                android:textSize="11sp"
                android:textColor="#CCCCCC"/>
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#88FFFFFF"
                android:tooltipText="@string/tooltip_sample_interval"
                android:tag="@string/tooltip_sample_interval"
                android:contentDescription="Sample Interval"/>
            <com.google.android.material.slider.Slider
                android:id="@+id/sliderInterval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:valueFrom="100"
                android:valueTo="2000"
                android:stepSize="100"
                android:value="500"
                app:haloRadius="0dp"
                app:thumbRadius="6dp"
                app:trackHeight="2dp"
                android:tooltipText="@string/tooltip_sample_interval"/>
            <TextView
                android:id="@+id/tvIntervalValue"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0.5s"
                android:textSize="11sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetectAction"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detect"
            android:textSize="12sp"
            android:minHeight="40dp"
            android:layout_marginBottom="8dp"
            android:tooltipText="@string/tooltip_detect"/>

        <!-- Progress and Status -->
        <LinearLayout
            android:id="@+id/layoutProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                app:indicatorColor="?attr/colorAccent"
                app:trackColor="#33FFFFFF"/>
            <TextView
                android:id="@+id/tvProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyzing..."
                android:textSize="11sp"
                android:textColor="#CCCCCC"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            app:dividerColor="#33FFFFFF"/>

        <!-- SECTION: FILTER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILTER"
            android:textSize="10sp"
            android:textColor="?attr/colorAccent"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <!-- Sensitivity Threshold -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/tvSensitivityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sens."
                android:textSize="11sp"
                android:textColor="#CCCCCC"/>
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#88FFFFFF"
                android:tooltipText="@string/tooltip_sensitivity"
                android:tag="@string/tooltip_sensitivity"
                android:contentDescription="Sensitivity"/>
            <com.google.android.material.slider.Slider
                android:id="@+id/sliderSensitivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:valueFrom="3"
                android:valueTo="30"
                android:value="12"
                app:haloRadius="0dp"
                app:thumbRadius="6dp"
                app:trackHeight="2dp"
                android:stepSize="1.0"
                android:tooltipText="@string/tooltip_sensitivity"/>
            <TextView
                android:id="@+id/tvSensitivityValue"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="12 bits"
                android:textSize="11sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Min Segment Duration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seg."
                android:textSize="11sp"
                android:textColor="#CCCCCC"/>
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#88FFFFFF"
                android:tooltipText="@string/tooltip_min_segment"
                android:tag="@string/tooltip_min_segment"
                android:contentDescription="Min Segment"/>
            <com.google.android.material.slider.Slider
                android:id="@+id/sliderMinSegment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:valueFrom="100"
                android:valueTo="5000"
                android:stepSize="100"
                android:value="500"
                app:haloRadius="0dp"
                app:thumbRadius="6dp"
                app:trackHeight="2dp"
                android:tooltipText="@string/tooltip_min_segment"/>
            <TextView
                android:id="@+id/tvMinSegmentValue"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0.5s"
                android:textSize="11sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDetectedStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ready to detect"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelVisual"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:minHeight="36dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApplyVisual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply"
                android:textSize="12sp"
                android:minHeight="36dp"
                android:enabled="false"
                android:tooltipText="@string/tooltip_apply_smart_cut"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
